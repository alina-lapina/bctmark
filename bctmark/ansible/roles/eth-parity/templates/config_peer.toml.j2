[parity]
base_path = "{{parity_home}}/.local/share/io.parity.ethereum"
db_path = "{{parity_home}}/.local/share/io.parity.ethereum/chains"
keys_path = "{{parity_home}}/.local/share/io.parity.ethereum/keys"

[network]
id = 1234567899
nat = "extip:{{ ansible_default_ipv4.address }}"
reserved_only = false
reserved_peers = "{{parity_home}}/list_bootnodes"

[websockets]
disable = false
port = 8546
interface = "all"
origins = ["all"]
apis = ["all"]
hosts = ["all"]

[rpc]
disable = false
port = 8545
interface = "all"
cors = ["all"]
apis = ["all"]
hosts = ["all"]

[ipc]
path = "{{parity_home}}/.local/share/io.parity.ethereum/jsonrpc.ipc"

[secretstore]
path = "{{parity_home}}/.local/share/io.parity.ethereum/secretstore"
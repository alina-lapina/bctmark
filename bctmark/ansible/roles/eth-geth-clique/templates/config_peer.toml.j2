{# Create bootnode peer list #}
{% set bootnode_addresses = [] %}
{% for host in groups['bootnode-clique'] %}
    {% set bootnode_addresses = bootnode_addresses.append("\"enode://" ~ hostvars[host]['enode_address']['stdout'] ~ "@" ~ hostvars[host]['ansible_' + blockchain_network]['ipv4']['address'] ~ ":30303\"") %}
{% endfor %}

[Eth]
NetworkId = 9999
SyncMode = "fast"
NoPruning = false
LightPeers = 100
DatabaseCache = 82
TrieCleanCache = 41
TrieDirtyCache = 41
TrieTimeout = 3600000000000
MinerGasFloor = 8000000
MinerGasCeil = 8000000
MinerGasPrice = 1000000000
MinerRecommit = 3000000000
MinerNoverify = false
EnablePreimageRecording = false
EWASMInterpreter = ""
EVMInterpreter = ""

[Eth.Ethash]
CacheDir = "ethash"
CachesInMem = 2
CachesOnDisk = 3
DatasetDir = "/tmp/home/geth/.ethash"
DatasetsInMem = 1
DatasetsOnDisk = 2
PowMode = 0

[Eth.TxPool]
Locals = []
NoLocals = false
Journal = "transactions.rlp"
Rejournal = 3600000000000
PriceLimit = 1
PriceBump = 10
AccountSlots = 16
GlobalSlots = 4096
AccountQueue = 64
GlobalQueue = 1024
Lifetime = 10800000000000

[Eth.GPO]
Blocks = 20
Percentile = 60

[Shh]
MaxMessageSize = 1048576
MinimumAcceptedPOW = 2e-01
RestrictConnectionBetweenLightClients = true

[Node]
DataDir = "/tmp/home/geth/.ethereum"
IPCPath = "geth.ipc"
HTTPHost = "0.0.0.0"
HTTPPort = 8545
HTTPCors = ["*"]
HTTPVirtualHosts = ["localhost"]
HTTPModules = ["personal", "admin", "db", "eth", "net", "web3", "miner", "shh", "txpool", "debug"]
WSHost = "0.0.0.0"
WSPort = 8546
WSOrigins = ["*"]
WSModules = ["personal", "admin", "db", "eth", "net", "web3", "miner", "shh", "txpool", "debug"]

[Node.P2P]
MaxPeers = 25
NoDiscovery = false
BootstrapNodes = [{{ bootnode_addresses | join(",") }}]
StaticNodes = []
TrustedNodes = []
ListenAddr = ":30303"
EnableMsgEvents = false

[Node.HTTPTimeouts]
ReadTimeout = 30000000000
WriteTimeout = 30000000000
IdleTimeout = 120000000000

[Dashboard]
Host = "localhost"
Port = 8080
Refresh = 5000000000
